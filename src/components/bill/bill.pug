include ../date-picker/date-picker.pug
include ../dropdown-submit-and-clear/dropdown-submit-and-clear.pug
include ../dropdown/dropdown.pug
include ../pay-button/pay-button.pug
mixin bill(options)
  .bill.js-bill(class=(options.modif ?`bill--${options.modif} js-bill--${options.modif}`: false))
    form.bill__content
      .bill__header
        .bill__lux-number
          span.bill__number
            span.bill__number-sign
              |№
            span.bill__room-number #{options.roomNumber}
            if options.isLux
              span.bill__isLux люкс
        .bill__room-price
          span.bill__price
            b #{options.perDay}
          span.bill__day  в сутки
      .bill__destination
        +datePicker({label:'Прибытие',placeholder:'19.08.2019'})
        +datePicker({label:'Выезд',placeholder:'23.08.2019'})  
      .bill__guests
        +dropdownSubmitAndClear({label:'Гости',placeholder:'3 гостя',list:['Взрослые','Дети','Младенцы'],option:'clear'})
      ul.bill__list
        li.bill__row 
          .bill__calculating-sum #{options.perDay}₽ х #{options.numberOfDays} суток
          .bill__money.bill__money--single 
            .bill__sum 39 960Р
        li.bill__row 
          .bill__calculating-sum Сбор за услуги: скидка #{options.sale}₽ 
          .bill__money
            .bill__info-icon i
            .bill__sum 0₽
        li.bill__row 
          .bill__calculating-sum Сбор за дополнительные услуги
          .bill__money
            .bill__info-icon i
            .bill__sum 300₽
        li.bill__all
          .bill__result Итого
          span.bill__money.bill__money--single 38 081₽
      .bill__footer
        +payButton({label:'Забронировать',arrow:true,type:'submit'}) 

