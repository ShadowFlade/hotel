mixin burgerMenu(options) 
  .burger.js-burger
    button.burger__button
      span.burger__item
    ul.burger__menu.js-burger__menu
      each val in options.arrayOfArguments
        if typeof val=='array'
          li.burger__option #{val.name}
            ul.burger__inner-menu
              each el in val 
                li.burger__inner-option #{el}
        else   
          if val.arrow=='true'
            li.burger__option #{val.name}
              img.burger__arrow(src='assets/img/arrow.svg')