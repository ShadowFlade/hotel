mixin burgerMenu(options={list:[{name:'О с',arrow:'false'},{name:'Услуги',arrow:'true'},{name:'Вакансии',arrow:'false'},{name:'Новости',arrow:'false'},{name:'Соглашения',arrow:'true'}]}) 
  .burger.js-burger
    button.burger__button
      span.burger__base
    ul.burger__menu.js-burger__menu
      each val in options.list
        if typeof val=='array'
          li.burger__option #{val.name}
            ul.burger__inner-menu
              each el in val 
                li.burger__inner-option #{el}
        else   
          if val.arrow=='true'
            li.burger__option #{val.name}
              img.burger__arrow(src='./assets/img/expand_more.png',alt='')