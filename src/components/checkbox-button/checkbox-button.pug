mixin checkbox-button({desc,text,name})
  label.checkbox-button
    if desc 
      .checkbox-button__info
        input.checkbox-button__input(type="checkbox",name=name,value=text,tabindex="0")
        .checkbox-button__text.checkbox-button__text--rich #{text}
        .checkbox-button__desc #{desc}
        span.checkbox-button__custom
    else 
      input.checkbox-button__input(type="checkbox",name=name,value=text,)
      .checkbox-button__text #{text}
      span.checkbox-button__custom