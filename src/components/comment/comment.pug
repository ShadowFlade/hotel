include ../like/like.pug
mixin comment({img,name,daysAgo,text})
  article.comment
    .comment__wrapper
      .comment__avatar
        .comment__pic
          img.comment__img(src=img,alt="person's avatar")
        .comment__like
          +like({numberOfLikes:'12'})
      .comment__body
        .comment__name #{name}
        .comment__time-passed #{daysAgo}  назад
        .comment__text #{text}



