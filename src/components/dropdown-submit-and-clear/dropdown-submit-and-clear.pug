mixin dropdownSubmitAndClear(options)
  .dropdown-accom__big.js-dropdown-accom__big
    label.dropdown-accom__label #{options.label}
    .input-box
      input.dropdown-accom(type='text',placeholder=options.placeholder)
      img.arrow(src='assets/img/arrow.svg')
      ul.dropdown-accom__ul.js-dropdown-accom__ul
        each val in options.arrayOfArguments
          li 
            .dropdown-accom__variant #{val}
            .dropdown-accom__btn-group
              button.dropdown-accom__button.dropdown-accom__button--prev(type='button') -
              .dropdown-accom__span 2
              button.dropdown-accom__button.dropdown-accom__button--next(type='button') +
        .dropdown-accom__footer
          if (options.option=='submit')
            button.dropdown-accom__submit.inbox-button(type='submit') Применить
          else if (options.option=='clear')
            button.dropdown-accom__clear.inbox-button(type='button') очистить
            button.dropdown-accom__submit.inbox-button(type='submit') Применить
          else if (options.option=='none')






