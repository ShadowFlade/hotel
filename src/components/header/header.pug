include ../burger-menu/burger-menu.pug   
include ../button/button.pug
include ../link/link.pug

mixin navbar(options={arrayOfElements:[{name:'О нас',arrow:false},{name:'Услуги',arrow:true,list:['hire','me']},{name:'Вакансии',arrow:false},{name:'Новости',arrow:false},{name:'Соглашения',arrow:true,list:['something','anything','whatever']}],arrow_class:'navigation__arrow'})
  .navigation 
    each el in options.arrayOfElements 
      if el.arrow==true
        .navigation__item
          span.navigation__text #{el.name}
          span.navigation__arrow
            img.arrow(src='assets/img/arrow.svg')
          if el.list
            .navigation__menu
              each val in el.list
                +link({mockAddress:'/',className:'navigation__option',text:`${val}`})
      else 
        .navigation__item #{el.name}

mixin navigation(options={username:'Юлий Цезарь',leftButtonLabel:'Войти',rightButtonLabel:'Зарегестрироваться'})
  nav.header
    .header__content
      .header__logo
        +burgerMenu({list:[{name:'О с',arrow:'false'},{name:'Услуги',arrow:'true'},{name:'Вакансии',arrow:'false'},{name:'Новости',arrow:'false'},{name:'Соглашения',arrow:'true'}]})
        img.logo(src=`assets/img/fsdlogo.svg`) 
      .header__interactive
        .header__navbar 
          .header__items
            +navbar({arrayOfElements:[{name:'О нас',arrow:false},
            {name:'Услуги',arrow:true,list:['hire','me']},
            {name:'Вакансии',arrow:false},
            {name:'Новости',arrow:false},
            {name:'Соглашения',arrow:true,list:['something','anything','whatever']}],arrow_class:'header__arrow'})
        
        if options.username
          .header__user 
            .header__username #{options.username}
        else
          .header__auth
            .header__small-button
              +button({modifs:['hollow'],text:options.leftButtonLabel})
            button.pay-button.pay-button--navigation #{options.rightButtonLabel}
          
