extends ../../layout/main/main
include ../../components/color-item/color-item.pug

block variables
  - var title = 'fonts and colors';
  - var description = 'used colors and fonts in the Metalamp toxin project';
  - var page = 'base-page';
block head 
  link(rel="stylesheet",href="./mixins.scss")
  link(rel="stylesheet",href="./vars.scss")
block content
  .base
    .left-half
      .left-half__column
        +colorItem({leftPartColor:'hsla(238, 35%, 19%, 1)', rightPartColors:['Dark Shade 100%','#1F2041']})
        +colorItem({leftPartColor:'#575870', rightPartColors:['Dark Shade 75%','#1F2041']})
        +colorItem({leftPartColor:'#8F8FA0', rightPartColors:['Dark Shade 50%','#1F2041']})
        +colorItem({leftPartColor:'#C7C7CF', rightPartColors:['Dark Shade 25%','#1F2041']})
        +colorItem({leftPartColor:'#F4F4F5', rightPartColors:['Dark Shade 5%','#1F2041']})
        +colorItem({leftPartColor:' #BC9CFF'  , rightPartColors:['Purple','#BC9CFF']})
        +colorItem({leftPartColor:' #6FCF97', rightPartColors:['Green','#6FCF97']})

    .right-half
      .right-half__column
        .right-half__item.right-half__item--big
          span.right-half__header.right-half__header--big H1
          p.right-half__text This one is the sub-section or widget title
        .right-half__item.right-half__item--medium
          span.right-half__header.right-half__header--medium H2
          p.right-half__text Next one is the item title inside widgets
        .right-half__item.right-half__item--small
          span.right-half__header.right-half__header--small H3
          p.right-half__text This is a label or CTA text
        .right-half__item.right-half__item--mainfont
          span.right-half__header.right-half__header--mainfont Body
          p.right-half__text This is the body text which is used for most of the design, like paragraphs, lists, etc.



