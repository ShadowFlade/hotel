extends ../../layout/main/main
include ../../components/date-picker/date-picker.pug
include ../../components/like/like.pug
include ../../components/dropdown/dropdown.pug
include ../../components/dropdown-submit-and-clear/dropdown-submit-and-clear.pug
include ../../components/toggle/toggle.pug
include ../../components/radio-buttons/radio-buttons.pug
include ../../components/checkbox-list/checkbox-list.pug
include ../../components/subscription-text-field/subscription-text-field.pug
include ../../components/bullet-list/bullet-list.pug
include ../../components/checkbox-buttons/checkbox-buttons.pug
include ../../components/checkbox-rich/checkbox-rich.pug
include ../../components/comment/comment.pug
include ../../components/features/features.pug 
include ../../components/masked-text-field/masked-text-field.pug
include ../../components/pagination/pagination.pug
include ../../components/range-slider/range-slider.pug
include ../../components/rate-button/rate-button.pug
include ../../components/pay-button/pay-button.pug
include ../../components/button/button.pug
include ../../components/text-field/text-field.pug
include ../../components/air-datepicker/air-datepicker.pug


block variables
	- let title = 'form-elements';
	- let description = 'smth';
	- let page='form-elements';
block content 
	.form-elements
		.form-elements__column
			.form-elements__item
				+textField({label:'text field',type:'text',placeholder:'Email'})
			.form-elements__item
				+dropdown()
			.form-elements__item.form-elements__item--text-field
				+defInput({label:'masked text field',placeholder:'ДД.ММ.ГГГГ',nameOfClass:'text-field'})
			.form-elements__item
				.date-picker-box
					.form-elements__datepicker
						+datePicker({label:'date dropdown',placeholder:'ДД.ММ.ГГГГ'})
					.form-elements__datepicker
						+datePicker({label:'date dropdown',placeholder:'19.08.2019'})
			.form-elements__item
				+datePicker({label:'filter date dropdown',placeholder:'19 авг- 23 авг',modif:'range',arrow:true})
			.form-elements__item
				h6.subscription-field__label subscription text field
				+subsTextField({placeholder:'Email'})
			.form-elements__item
				+dropdownSubmitAndClear({label:'dropdown',placeholder:'2 спальни, 2 кровати',list:['Спальни','Кровати','Ванные комнаты'],option:'none',modif:'small'})
			.form-elements__item
				+checkboxList({label:'expandable checkbox list',list:['Завтрак','Письменный стол','Стул для кормления','Кроватка','Телевизор','Шампунь','Плед','Тумбочка']}) 
			.form-elements__item
				+features({features:[{pic:'assets/img/smile.png',feature:'Комфорт',desc:'Шумопоглощающие стены',alt:''},{pic:'assets/img/comfort2.png',feature:'Удобство',desc:'Окно в каждой из спален',alt:''},{pic:'assets/img/whatshot.png',feature:'Уют',desc:'Номер оснащен камином',alt:''}]})


		.form-elements__column
			.form-elements__item
				+checkboxButtons
			.form-elements__item
				h6.radio-buttons__label RADIO BUTTONS
			.form-elements__item

				+radioButtons({list:['Мужчина','Женщина'],name:'gender'})    
				+radioButtons({list:['Мужчина','Женщина'],name:'smth'})    

	
			.form-elements__item
				.toggle__label TOGGLE
				+toggle({list:['Получать спецпредложения','fish']})
			.form-elements__item
				.like-buttons
					.like-buttons__label LIKE BUTTON
					.like-buttons__group
						+like({numberOfLikes:'12',id:'like'})
						+like({numberOfLikes:'12',id:'like'})
			.form-elements__item
				.rate__buttons
					h6.rate__label RATE BUTTON
					.rate__items
						+rateButton(5)
						+rateButton(5)
			.form-elements__item
				.dropdown
					+dropdownSubmitAndClear({label:'dropdown',placeholder:'3 гостя',list:['взрослые','дети','младенцы'],option:'clear',modif:'big'})
			.form-elements__item
				+checkboxRich()
			.form-elements__item
				.comment__box
					+comment({img:'assets/img/avatar.png',name:'Константин Константинопольский.',daysAgo:'5 дней',
	text:'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})

		.form-elements__column
			.form-elements__item
				.range-slider__box
					+rangeSlider('RANGE SLIDER')
			.form-elements__item
				h6.buttons__label buttons
				.buttons
					.buttons__box
						+button({modifs:['full'],text:'click me'})
						+button({modifs:['full'],text:'click me'})
						+button({modifs:['hollow'],text:'click me'})
						+button({modifs:['hollow'],text:'click me'})
						+button({modifs:['inline'],text:'click me'})
						+button({modifs:['inline'],text:'click me'})
						+payButton({arrow:true,label:'перейти к оплате'})
			.form-elements__item
				h6.pagination__label pagination
				+pagination({numberOfFirstPages:3,lastPage:15,itemsOnPage:12,itemsTotal:'100+'})
			.form-elements__item
				.dropdown
					+dropdownSubmitAndClear({label:'dropdown',placeholder:'3 гостя',list:["взрослые","дети","младенцы"],option:'clear',modif:'big'})
			.form-elements__item
				.bullet-list__title
					+bulletList({title:'bullet list',list:['Нельзя с питомцами','Без вечеринок и мероприятий','Время прибытия — после 13:00, а выезд до 12:00']})
			










