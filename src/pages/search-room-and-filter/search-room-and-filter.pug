    main.main 
      .sidebar
        form.sidebar__container 
          .sidebar__item.sidebar__item--input 
            +datePicker({label:'даты пребывания в отеле',placeholder:'19 авг - 23 авг'})
          .sidebar__item
            +dropdownSubmitAndClear({label:'гости',placeholder:'3 гостя',list:['взрослые','дети','младенцы'],option:'clear',modif:'small'})
