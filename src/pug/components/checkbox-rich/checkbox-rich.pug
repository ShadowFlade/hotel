- var defOptions={label:'Доступность',name:'facilities',array_of_arguments:[['Широкий коридор','Ширина коридоров в номере не менее 91 см.'],['Помощник для инвалидов','На 1 этаже вас встретит специалист  и проводит до номера.']]}

mixin checkboxRich(options=defOptions)
  .checkbox-rich #{options.label}
    .checkbox-rich__group
      each val in options.array_of_arguments
        .checkbox-rich__item
          input(class='checkbox-rich__input',type='checkbox',name=name,id=name,,val=val[0])
          span(class='checkbox-rich__custom')
          label(class='checkbox-rich__info')
            div(class='checkbox-rich__label',for=options.name) #{val[0]}  
            div(class='checkbox-rich__desc') #{val[1]}
            img(src='assets/img/ok.png' style={display:'none'})


+checkboxRich()
