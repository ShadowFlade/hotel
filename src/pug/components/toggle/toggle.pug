mixin toggle(options)
  .toggle-details 
    if options.label
      label.toggle__label #{options.label}
    .toggle-group
      each val in options.arrayOfArguments
        .toggle__item
          label(class='toggle',for=val) 
            span.toggle__text #{val}
            input(type='checkbox',name=val,id=val,class='toggle__input')
            span(class='toggle-custom')
              span(class='toggle-custom__helper')
              span(class='toggle-custom__helper2')

