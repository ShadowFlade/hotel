block variables
mixin dropdown(options={label:'dropdown',number_of_options:7,option:'Сколько гостей'})
  -let n=0
  label #{options.label}
  label 
    select
      option #{options.option}
      while n<=options.number_of_options
        li=n++
        option(value=n) #{n}
    img(src='assets/img/arrow.svg',class='arrow')







