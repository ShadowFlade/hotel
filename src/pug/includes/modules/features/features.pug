mixin features(options)
  .feature__item
    .feature__pic 
      img(src=options.pic)
    .feature__info
      .feature__label #{options.feature}
      .feature__desc #{options.desc}
      
.features__box
  +features({pic:'assets/img/smile.png',feature:'Комфорт',desc:'Шумопоглощающие стены'})
  +features({pic:'assets/img/comfort2.png',feature:'Удобство',desc:'Окно в каждой из спален'})
  +features({pic:'assets/img/whatshot.png',feature:'Уют',desc:'Номер оснащен камином'})