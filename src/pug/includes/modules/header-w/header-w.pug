include ../navbar/navbar.pug
- var username='';
nav(class='navigation')
  .navigation__content
    .navigation__icon-space(class='brando-logo')
      include ../burger-menu/burger-menu.pug   
      img(src=`assets/img/fsdlogo.svg`,class='logo-img') 
    .navigation__navbar 
      .navigation__items
        +navbar({array_of_elements:[{name:'О нас',arrow:false},
        {name:'Услуги',arrow:true,list:['hire','me']},
        {name:'Вакансии',arrow:false},
        {name:'Новости',arrow:false},
        {name:'Соглашения',arrow:true,list:['something','anything','whatever']}],arrow_class:'navigation__arrow'})
    
    if username!=0
      .navigation__user #{username}
    else
      .btngroup-authorization 
        .button-default2__wrapper(class='navigation__button-wrapper')
          button(class='button-default2') Войти
        button(class='pay-button navigation__bigbutton',style={width:'196px',height:'34px'}) Зарегестрироваться
          
