extends ../../layout/main
include ../../includes/modules/date-picker/date-picker.pug
include ../../includes/modules/like/like.pug
include ../../includes/modules/dropdown/dropdown.pug
include ../../includes/modules/dropdownSubmitAndClear/dropdownSubmitAndClear.pug
include ../../includes/modules/toggle/toggle.pug
include ../../includes/modules/radio-buttons/radio-buttons.pug
block variables
	- let title = 'form-elements';
	- let description = 'smth';
	- let pageclass='form-elements';
block content 
	.form-elements
		.form-elements__column
			include ../../includes/modules/text-field/text-field.pug 
			.dropdown.js-dropdown
				+dropdown()
			include ../../includes/modules/masked-text-field/masked-text-field.pug
			.date-picker-box
				+date-picker({label:'date dropdown'})
				+date-picker({label:'date dropdown'})
			include ../../includes/modules/filter-date-dropdown/filter-date-dropdown.pug
			include ../../includes/modules/subscription-text-field/subscription-text-field.pug
			+dropdownSubmitAndClear({label:'удобство',placeholder:'2 спальни, 2 кровати',array_of_arguments:['Спальни','Кровати','Ванные комнаты'],option:'none'})
			include ../../includes/modules/checkbox-list/checkbox-list.pug
			include ../../includes/modules/features/features.pug 

		.form-elements__column
			include ../../includes/modules/checkbox-buttons/checkbox-buttons.pug
			span.radio-buttons__label RADIO BUTTONS
			+radio-buttons({array_of_arguments:['Мужчина','Женщина'],name:'gender'})    
			+toggle({label:'toggle',array_of_arguments:['Получать спецпредложения','fish']})
			.like-buttons
				.like-buttons__label.label LIKE BUTTON
				.like-buttons__group
					+like({number_of_likes:'12',id:'like'})
					+like({number_of_likes:'12',id:'like'})
			.rate__buttons
				span.rate__label.label RATE BUTTON
				.rate__items
					include ../../includes/modules/rate-button/rate-button.pug
					+rate-button(5)
			.dropdown
				+dropdownSubmitAndClear({label:'dropdown',placeholder:'3 гостя',array_of_arguments:['взрослые','дети','младенцы'],option:'clear'})
			include ../../includes/modules/checkbox-rich/checkbox-rich.pug
			.comment__box
				include ../../includes/modules/comment/comment.pug

		.form-elements__column
			.range-slider__box
				include ../../includes/modules/range-slider/range-slider.pug
			label.buttons__label buttons
			include ../../includes/modules/buttons/buttons.pug
			include ../../includes/modules/pay-button/pay-button.pug
			.pagination(class='label') pagination
				include ../../includes/modules/pagination/pagination.pug
			.dropdown
				+dropdownSubmitAndClear({label:'dropdown',placeholder:'3 гостя',array_of_arguments:["взрослые","дети","младенцы"],option:'clear'})
			.bullet-list
				.label bullet list
				include ../../includes/modules/bullet-list/bullet-list.pug
			










