extends ../../layout/main/main
include ../../components/date-picker/date-picker.pug
include ../../components/like/like.pug
include ../../components/dropdown/dropdown.pug
include ../../components/dropdownSubmitAndClear/dropdownSubmitAndClear.pug
include ../../components/toggle/toggle.pug
include ../../components/radio-buttons/radio-buttons.pug
include ../../components/dropdownNoButtons/dropdownNoButtons.pug
include ../../components/checkbox-list/checkbox-list.pug
include ../../components/subscription-text-field/subscription-text-field.pug


block variables
	- let title = 'form-elements';
	- let description = 'smth';
	- let pageclass='form-elements';
block content 
	.form-elements
		.form-elements__column
			include ../../components/text-field/text-field.pug 
			.dropdown.js-dropdown
				+dropdown()
			include ../../components/masked-text-field/masked-text-field.pug
			.date-picker-box
				+date-picker({label:'date dropdown'})
				+date-picker({label:'date dropdown'})
			include ../../components/filter-date-dropdown/filter-date-dropdown.pug
			+subs-text-field({label:'subscription text field'})
			+dropdownNoButtons({label:'dropdown',placeholder:'2 спальни, 2 кровати',array_of_arguments:['Спальни','Кровати','Ванные комнаты'],option:'none'})
			+checkboxlist({label:'expandable checkbox list',array_of_arguments:['Завтрак','Письменный стол','Стул для кормления','Кроватка','Телевизор','Шампунь','Плед','Тумбочка']}) 
			include ../../components/features/features.pug 

		.form-elements__column
			include ../../components/checkbox-buttons/checkbox-buttons.pug
			span.radio-buttons__label RADIO BUTTONS
			+radio-buttons({array_of_arguments:['Мужчина','Женщина'],name:'gender'})    
			+toggle({label:'toggle',array_of_arguments:['Получать спецпредложения','fish']})
			.like-buttons
				.like-buttons__label.label LIKE BUTTON
				.like-buttons__group
					+like({number_of_likes:'12',id:'like'})
					+like({number_of_likes:'12',id:'like'})
			.rate__buttons
				span.rate__label.label RATE BUTTON
				.rate__items
					include ../../components/rate-button/rate-button.pug
					+rate-button(5)
			.dropdown
				+dropdownSubmitAndClear({label:'dropdown',placeholder:'3 гостя',array_of_arguments:['взрослые','дети','младенцы'],option:'clear'})
			include ../../components/checkbox-rich/checkbox-rich.pug
			.comment__box
				include ../../components/comment/comment.pug

		.form-elements__column
			.range-slider__box
				include ../../components/range-slider/range-slider.pug
			label.buttons__label buttons
			include ../../components/buttons/buttons.pug
			include ../../components/pay-button/pay-button.pug
			.pagination(class='label') pagination
				include ../../components/pagination/pagination.pug
			.dropdown
				+dropdownSubmitAndClear({label:'dropdown',placeholder:'3 гостя',array_of_arguments:["взрослые","дети","младенцы"],option:'clear'})
			.bullet-list
				.label bullet list
				include ../../components/bullet-list/bullet-list.pug
			










