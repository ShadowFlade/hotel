extends ../../layout/landing
block variables
  - var title = 'room details';
  - var description = ''; 
  - var pageclass='room-details' 
block content
  header        
    include ../../includes/modules/header-w/header-w.pug
  main 
    .gallery 
      .gallery__pitures(class='pictures')
        .pictures__item(class='pictures__item_big')
          img(src='assets/img/hotel-cards/room-details/image1.png')
        .pictures__column
          .pictures__item
            img(src='assets/img/hotel-cards/room-details/image2.png')
          .pictures__item
             img(src='assets/img/hotel-cards/room-details/image 3.png')
    .content
      .content__column
        .content__item
          include ../../includes/modules/features/features.pug
        .content__item
          include ../../includes/modules/graph/graph.pug
        .comments
          .comments__header
            span(class='comments__title') Отзывы посетителей номера
            span(class='comments__count') 2 отзыва
          .comments__item
            +comment('../../../assets/img/avatar.png','Мурад Сарафанов','5 дней','Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.')

          .comments__item
            +comment('../../../assets/img/avatar2.png','Патрисия Стёклышкова','Неделю','Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент')

        .comments__item
          +bullet-list(['Нельзя с питомцами','Без вечеринок и мероприятий','Время прибытия — после 13:00,а выезд до 12:00'],'Правила')
        .content__item
          .cancel__item
            .cancel__title Отмена
            .cancel__text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.

      .content__side
          .content__item 
            include ../../includes/modules/bill/bill.pug




  footer(class='footer-main')
    include ../../includes/modules/footer/footer.pug
  footer(class='footer-secondary')
    include ../../includes/modules/footer-mini/footer-mini.pug